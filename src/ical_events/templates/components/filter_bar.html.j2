<div class="filter-bar" role="toolbar" aria-label="Event filters">
  <span class="event-count" aria-live="polite">{{ events | length }} event{{ 's' if events | length != 1 }}</span>
  <button type="button"
          class="favorites-toggle"
          aria-pressed="false"
          aria-label="Show favorites only">
    &#9829; Favorites Only
  </button>
</div>
